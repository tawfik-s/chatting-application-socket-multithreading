<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.SignupController">
    <children>
        <VBox layoutX="128.0" layoutY="12.0" prefHeight="513.0" prefWidth="378.0" spacing="20.0">
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="73.0" prefWidth="380.0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 20 0;" text="Sign Up" textAlignment="CENTER" />
            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #fff; -fx-border-color: #e6e6e6; -fx-border-radius: 5px; -fx-padding: 10px; -fx-font-size: 16px; -fx-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #fff; -fx-border-color: #e6e6e6; -fx-border-radius: 5px; -fx-padding: 10px; -fx-font-size: 16px; -fx-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: #fff; -fx-border-color: #e6e6e6; -fx-border-radius: 5px; -fx-padding: 10px; -fx-font-size: 16px; -fx-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);" />
            <HBox spacing="20.0">
                <Button fx:id="signupButton" style="-fx-background-color: #0078d7; -fx-text-fill: #fff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);" text="Sign Up" />
                <Button fx:id="cancelButton" style="-fx-background-color: transparent; -fx-border-color: #e6e6e6; -fx-border-radius: 5px; -fx-padding: 10px 20px; -fx-font-size: 16px; -fx-font-weight: bold; -fx-box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);" text="Cancel" />
            </HBox>
            <Label style="-fx-text-fill: #333;" text="Already have an account?" />
            <Button fx:id="loginButton" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: #0078d7; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 0;" text="Log in" />
        </VBox>
    </children>
</AnchorPane>
